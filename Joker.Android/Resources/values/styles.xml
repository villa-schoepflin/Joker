<?xml version="1.0" encoding="utf-8" ?>
<resources>
	<style name="splash"
		   parent="Theme.AppCompat.Light.DarkActionBar">
		<item name="android:windowBackground">
			@drawable/splash
		</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowIsTranslucent">false</item>
		<item name="android:windowIsFloating">false</item>
		<item name="android:backgroundDimEnabled">true</item>
		<item name="android:scaleType">center</item>
		<item name="colorPrimary">@color/colorPrimary</item>
		<!-- colorPrimaryDark is used for the status bar -->
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorPrimaryDark</item>
	</style>
	<!-- Base theme applied no matter what API -->
	<style name="mainTheme"
		   parent="Theme.AppCompat.Light.DarkActionBar">
		<!--If you are using revision 22.1 please use just windowNoTitle. Without android:-->
		<item name="windowNoTitle">true</item>
		<!--We will be using the toolbar so no need to show ActionBar-->
		<item name="windowActionBar">false</item>
		<!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette -->
		<!-- colorPrimary is used for the default action bar background -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<!-- colorPrimaryDark is used for the status bar -->
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<!-- colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets -->
		<item name="colorAccent">@color/colorPrimaryDark</item>
		<!-- You can also set colorControlNormal, colorControlActivated
         colorControlHighlight and colorSwitchThumbNormal. -->
		<item name="windowActionModeOverlay">true</item>
		<item name="android:navigationBarColor">@color/colorPrimary</item>
		<item name="android:timePickerStyle">@style/spinnerTimePicker</item>
		<item name="android:colorPressedHighlight">@color/listView</item>
		<item name="android:colorLongPressedHighlight">@color/listView</item>
		<item name="android:colorFocusedHighlight">@color/listView</item>
		<item name="android:colorActivatedHighlight">@color/listView</item>
		<item name="android:activatedBackgroundIndicator">@color/listView</item>
	</style>

	<style name="spinnerTimePicker"
		   parent="android:Widget.Material.Light.TimePicker">
		<item name="android:timePickerMode">spinner</item>
	</style>
</resources>
