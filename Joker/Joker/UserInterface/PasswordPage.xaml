<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:app="clr-namespace:Joker.AppInterface;assembly=Joker"
			 x:Class="Joker.UserInterface.PasswordPage"
			 BackgroundColor="{StaticResource Primary1}">
	<ScrollView>
		<StackLayout Padding="30"
					 Spacing="20">
			<Label HorizontalOptions="CenterAndExpand"
				   VerticalOptions="StartAndExpand"
				   FontSize="40"
				   TextColor="{StaticResource TextContrast}">Dein Passwort</Label>
			<Image Source="{app:ImageResource Joker.Resources.Icons.joker.png}"
				   HorizontalOptions="CenterAndExpand"
				   VerticalOptions="CenterAndExpand" />
			<Entry x:Name="PasswordEntry"
				   TextChanged="OnPasswordEntryTextChanged"
				   HorizontalOptions="Center" />
			<Label Text="Passwort vergessen?"
				   HorizontalOptions="End"
				   VerticalOptions="End">
				<Label.GestureRecognizers>
					<TapGestureRecognizer Tapped="OnForgotPasswordLabel" />
				</Label.GestureRecognizers>
			</Label>
		</StackLayout>
	</ScrollView>
</ContentPage>