<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:app="clr-namespace:Joker.AppInterface;assembly=Joker"
			 x:Class="Joker.UserInterface.PasswordPage"
			 BackgroundColor="{StaticResource Primary1}">
	<ScrollView>
		<StackLayout Padding="30"
					 Spacing="20">
			<Label HorizontalOptions="CenterAndExpand"
				   VerticalOptions="StartAndExpand"
				   FontSize="40"
				   TextColor="{StaticResource TextContrast}">Dein Passwort</Label>
			<StackLayout HorizontalOptions="CenterAndExpand"
						 VerticalOptions="Center">
				<Image x:Name="Logo"
					   Source="{app:ImageResource Joker.Resources.Icons.joker.png}" />
				<ActivityIndicator x:Name="Indicator" />
			</StackLayout>
			<Entry x:Name="PasswordEntry"
				   TextChanged="OnPasswordEntryTextChanged"
				   HorizontalOptions="CenterAndExpand"
				   VerticalOptions="CenterAndExpand" />
			<Label Text="Passwort vergessen?"
				   HorizontalOptions="End"
				   VerticalOptions="End"
				   TextColor="{StaticResource TextContrast}">
				<Label.GestureRecognizers>
					<TapGestureRecognizer Tapped="OnForgotPasswordLabel" />
				</Label.GestureRecognizers>
			</Label>
		</StackLayout>
	</ScrollView>
</ContentPage>