<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:da="clr-namespace:Joker.DataAccess"
			 x:Class="Joker.UserInterface.SecurityQuestionPage"
			 Title="Sicherheitsfragen"
			 BackgroundColor="{StaticResource Primary1}">
	<ScrollView>
		<StackLayout Padding="30"
					 Spacing="20">
			<ActivityIndicator x:Name="Indicator"
							   Color="{StaticResource TextContrast}" />
			<Frame Margin="{StaticResource StripMargin}"
				   Padding="{StaticResource PagePadding}"
				   BackgroundColor="{StaticResource Primary1}">
				<StackLayout>
					<Label x:Name="SecurityQuestion1"
						   TextColor="{StaticResource TextContrast}"
						   FontSize="Large" />
					<Entry x:Name="FirstSecurityAnswerEntry"
						   TextChanged="CheckSecurityAnswer"
						   HorizontalOptions="FillAndExpand">
						<Entry.TextColor>
							<OnPlatform x:TypeArguments="Color">
								<OnPlatform.Platforms>
									<On Platform="Android" Value="{StaticResource TextContrast}" />
								</OnPlatform.Platforms>
							</OnPlatform>
						</Entry.TextColor>
					</Entry>
				</StackLayout>
			</Frame>
			<Frame Margin="{StaticResource StripMargin}"
				   Padding="{StaticResource PagePadding}"
				   BackgroundColor="{StaticResource Primary1}">
				<StackLayout>
					<Label x:Name="SecurityQuestion2"
						   TextColor="{StaticResource TextContrast}"
						   FontSize="Large" />
					<Entry TextChanged="CheckSecurityAnswer"
						   HorizontalOptions="FillAndExpand">
						<Entry.TextColor>
							<OnPlatform x:TypeArguments="Color">
								<OnPlatform.Platforms>
									<On Platform="Android" Value="{StaticResource TextContrast}" />
								</OnPlatform.Platforms>
							</OnPlatform>
						</Entry.TextColor>
					</Entry>
				</StackLayout>
			</Frame>
		</StackLayout>
	</ScrollView>
</ContentPage>
