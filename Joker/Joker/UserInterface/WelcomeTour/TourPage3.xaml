<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:app="clr-namespace:Joker.AppInterface;assembly=Joker"
			 x:Class="Joker.UserInterface.TourPage3"
			 BackgroundColor="{StaticResource Primary1}">
	<ContentPage.Title>
		<OnPlatform iOS="Erstes Limit" />
	</ContentPage.Title>
	<ScrollView>
		<StackLayout Padding="30"
					 Spacing="20">
			<StackLayout Orientation="Horizontal"
						 Padding="50,10,50,70"
						 Spacing="0"
						 HorizontalOptions="CenterAndExpand">
				<Image Source="{app:ImageResource Joker.Resources.Icons.filledcircle.png}" />
				<Image Source="{app:ImageResource Joker.Resources.Icons.filledbar.png}" />
				<Image Source="{app:ImageResource Joker.Resources.Icons.filledcircle.png}" />
				<Image Source="{app:ImageResource Joker.Resources.Icons.filledbar.png}" />
				<Image Source="{app:ImageResource Joker.Resources.Icons.filledcircle.png}" />
			</StackLayout>
			<Label HorizontalOptions="Center"
				   VerticalOptions="Center"
				   FontSize="25"
				   TextColor="{StaticResource TextContrast}"
				   HorizontalTextAlignment="Center">Lege Dein Limit fest</Label>
			<Label HorizontalOptions="Center"
				   VerticalOptions="CenterAndExpand"
				   FontSize="16"
				   TextColor="{StaticResource TextContrast}"
				   HorizontalTextAlignment="Center">Gib an, wieviel Du in der ersten Woche maximal für Glücksspiel ausgeben möchtest.</Label>
			<Entry x:Name="LimitEntry"
				   Placeholder="Dein Limit"
				   Text="">
				<Entry.TextColor>
					<OnPlatform Android="{StaticResource TextContrast}" />
				</Entry.TextColor>
				<Entry.Keyboard>
					<OnPlatform Android="Telephone"
								iOS="Numeric" />
				</Entry.Keyboard>
			</Entry>
			<Button Clicked="OnContinueButton"
					VerticalOptions="CenterAndExpand"
					BackgroundColor="{StaticResource Bgr1}"
					TextColor="{StaticResource Text1}"
					Text="Weiter" />
		</StackLayout>
	</ScrollView>
</ContentPage>